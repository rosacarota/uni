#include <stdio.h>

int main()

{int x, b20=20, b10=10, b5=5, b1=1, y, z, g, f; 
	
	printf("Quante banconote ti servono? \n");
	
	printf("Inserisci il denaro \n");
	scanf("%d", &x);
	
	y = x / b20;
	printf("Ti servono %d biglietti da 20 \n", y);
	
	z = (x-(y*20)) / b10;
	printf("Ti servono %d biglietti da 10 \n", z);
	
	g = (y-(z*10)) / b5;
	printf("Ti servono %d biglietti da 5 \n", g);
	
	f = (z-(g*5)) / b1;
	printf("Ti servono %d biglietti da 1 \n", f);
	
	return 0;
}
